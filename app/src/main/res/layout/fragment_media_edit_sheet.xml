<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.MediaEditSheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="@string/add_to_favorite_media_edit_sheet_btn"
            android:gravity="start"
            android:id="@+id/media_edit_favorite_btn"
            android:padding="10dp"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textColor="#1C1C1C"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_favorite_gray"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:id="@+id/media_edit_favorite_ic"
            />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="@string/rename_media_edit_sheet_btn_text"
            android:gravity="start"
            android:id="@+id/media_edit_rename_btn"
            android:padding="10dp"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textColor="#1C1C1C"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_rename_black"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="@string/delete_media_edit_sheet_btn_text"
            android:gravity="start"
            android:id="@+id/media_edit_delete_btn"
            android:padding="10dp"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textColor="#AA2829"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_remove_red"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

</LinearLayout>