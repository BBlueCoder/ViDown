<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.MainFragment"
    android:background="@color/color_text"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="ViDown"
        android:textColor="@color/color_primary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/link"
        app:boxBackgroundColor="#00000000"
        app:startIconDrawable="@drawable/ic_search_gray"
        app:boxStrokeWidth="0dp"
        android:hint="@string/link_hint"
        app:hintTextColor="@color/color_primary"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/link_text"
            android:maxLines="1"
            android:inputType="text"
            android:text="https://www.tiktok.com/@joker.me1/video/7154795821395987718"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_look_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/link"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/color_primary"
        android:padding="15dp"
        android:text="@string/button_search_media_text"
        android:textColor="@color/color_text" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/main_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/link"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:indeterminate="true"
        android:visibility="visible"
        app:indicatorColor="@color/color_accent" />


    <com.bluetech.vidown.ui.customviews.ResultCardView
        android:id="@+id/card_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_look_up"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginEnd="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_result_available_formats"
        android:layout_below="@id/card_result"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="@string/results_text_btn"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/color_accent"
        android:visibility="gone"
        tools:visibility="visible"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        />



</RelativeLayout>